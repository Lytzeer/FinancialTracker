<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.financialtracker.AddRevenusView"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@CSS/add-line-view.css">
    <VBox alignment="CENTER" spacing="10.0">
        <Label text="Période" />
        <TextField fx:id="periodField" promptText="Période" />
        <Label text="Salaire" />
        <TextField fx:id="salaryField" promptText="Salaire" />
        <Label text="Aides" />
        <TextField fx:id="helpersField" promptText="Aides" />
        <Label text="Auto-entreprise" />
        <TextField fx:id="selfEnterpriseField" promptText="Auto-entreprise" />
        <Label text="Revenus passif" />
        <TextField fx:id="passiveIncomeField" promptText="Revenus passif" />
        <Label text="Autres" />
        <TextField fx:id="otherField" promptText="Autres" />
        <Button text="Ajouter" onAction="#addRevenus" />
    </VBox>
</AnchorPane>
